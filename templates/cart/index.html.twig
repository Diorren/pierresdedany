{% extends 'base.html.twig' %}

{% block title ('Panier') %}

{% block body %}

    <div class="container">
        <div class="mt-5 bg-light p-3">
            <h1>Votre panier</h1>
        </div>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td coldspan="3"></td>
                    <td></td>
                    <td class="text-right">Total :</td>
                    <td>{{ total }}</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {% else %}
        <p>Le panier est vide !</p>        
    {% endif %}

{% endblock %}
