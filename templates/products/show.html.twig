{% extends 'base.html.twig' %}

{% block title 'Produit' %}

{% block body %}
<div class="container jumbotron mt-5 mb-0 pt-5">
    <h1 class="bg-dark text-white text-uppercase m-0 p-3">{{ product.name }}</h1>
    <div class="row align-items-center">
        <div class="col-md-6">
			<h3 class="h4 card-header text-white bg-secondary">Catégories: {{product.categories.name}}</h3>
            {% if product.images is not empty %}
                    <img id="collection" src="{{ asset('build/images/'~ product.images[0].name) }}" alt="{{product.name}}"
                    style="height:450px;width:100%;display:block;">
            {% endif %}		
		</div>
		<div class="col-md-6">
            <p class="card-text">{{ product.content | raw }}</p>
			<div class="row justify-content-around align-items-center">
				<p class="text-uppercase mt-3"><strong>Prix :</strong><span> {{ product.price }} &euro;</span></p>

				<!--Condition pour le stock positif avec affichage message-->
				{% if product.stock > 0 %}              
					<a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success float-right mr-3">
						<i class="fas fa-shopping-cart"></i> Acheter
					</a>
				{% endif %}
			</div>	
		</div>
			<!--Condition pour le stock négatif avec affichage message-->
            {% if product.stock < 1 %}
                <p class="alert alert-warning">Victime de son succès !</p>
            {% endif %}
		      
		</div>
    </div>    
</div>
{% endblock %}
