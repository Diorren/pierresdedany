{% extends 'users/base.html.twig' %}

{% block title %} Modification du mot de passe de{{ app.user.firstname}} {{app.user.lastname}}{% endblock %}

{% block body %}

    <div class="container text-center mt-3 mb-3 pt-5">
        {% for message in app.flashes('error') %}
            <div class="col-md-6">
                <div class="alert alert-danger">{{ message }}</div>
            </div>
        {% endfor %}
        <h1>Modification du mot de passe de {{app.user.firstname}} {{app.user.lastname}}</h1>
        <div class="jumbotron row justify-content-center">
            <div class="col-md-6">
                <form action="" method="post">
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirmez le mot de passe</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
                    </div>
                <button type="submit" class="btn btn-lg btn-primary mt-5 mr-3">Valider</button>
                <a href="{{ path('users') }}">
                    <button type="button" class="btn btn-lg btn-dark mt-5">Retour</button>
                </a>           
                </form>
            </div>
        </div>
    </div>

{% endblock %}
