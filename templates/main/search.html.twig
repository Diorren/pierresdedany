{% extends "base.html.twig" %}

{% block title %}Recherche{% endblock %}

{% block stylesheets %}
  {{ parent() }} 
{% endblock %}

{% block body %}
    <div class="container-fluid search-page">
        <div class="row mt-5">
            <div class="col-md-3 search">
                {% include "main/_filter.html.twig" with {form: form, min: min, max: max} only %}
            </div>        
            <div class="col-md-8 right-search ml-auto">
                <div class="d-flex justify-content-end mb-2 mr-4">
                    {{ knp_pagination_sortable(products, 'Prix', 'p.price') }}
                    {{ knp_pagination_sortable(products, 'Promo', 'p.promo') }}
                </div>
                <div class="grid">
                    {% for product in products %}
                        {% include "main/_cardSearch.html.twig" with {product: product} only %}
                    {% endfor %}
                </div>
                    {{ knp_pagination_render(products) }}                
            </div>
        </div>
    </div>
{% endblock %}