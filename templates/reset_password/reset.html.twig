{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}

{% block body %}
<div class="container-fluid jumbotron">
    <h1 class="h2 pl-5 text-center">Réinitialisation de votre mot de passe</h1>        
        {{ form_start(resetForm) }}
        <div class="row justify-content-center">
            <div class="col-md-6 mt-3" id="label">
                {{ form_row(resetForm.plainPassword) }} 
                <div class="row justify-content-center">
                    <button class="btn btn-lg btn-primary">Enregistrer</button>        
                </div>      
            </div>
        </div>
        {{ form_end(resetForm) }}        
</div>
{% endblock %}
