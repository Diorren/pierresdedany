{% extends 'admin/base.html.twig' %}

{% block title %}Gérer les catégories{% endblock %}

{% block body %}
    <div class="text-center m-3">
        <h1 class="mb-3">Gérer les catégories</h1>
        <a href="{{ path('admin_categories_add') }}" type="button" class="btn btn-primary mb-3">Ajouter une catégorie</a>
    </div>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{categorie.id}}</td>
                    <td>{{categorie.name}}</td>
                    <td>{{categorie.slug}}</td>
                    <td class="text-center">
                        <a href="{{ path("admin_categories_edit", {id: categorie.id}) }}" type="button" class="btn btn-secondary">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>    
    </div>
{% endblock %}
