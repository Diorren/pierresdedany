{% extends "admin/base.html.twig" %}

{% block title 'Liste des utilisateurs' %}

{% block body %}
    <div class="text-center m-3">
        <h1>Liste et informations utilisateurs</h1>
    </div>
    <div class="container">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Adresse</th>
                    <th>Code Postal</th>
                    <th>Ville</th>
                    <th>Mail</th>
                    <th>Téléphone</th>
                    <th>Nbre de Commandes</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.lastname}}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.address }}</td>
                        <td>{{ user.postalCode}}</td>
                        <td>{{ user.city }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phone }}</td>
                        
                        {# Utilisation de la fonction de Twig Extension #}
                        <td><span>{{ totalCartUser(user) }}</span></td>
                        <td></td>                                                   
                    </tr>
                {% endfor %}
            </tbody>
        </table>    
    </div>
{% endblock %}