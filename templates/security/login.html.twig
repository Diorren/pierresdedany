{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}    
    <div class="container jumbotron">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="h2 text-center">Connectez-vous</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="row mt-3">
                    <div class="col-md-4">
                        <button class="btn btn-lg btn-dark text-center" type="submit">Connexion</button>
                    </div>
                    <div class="col-md-8 row justify-content-end align-items-center">
                        <p><a href="{{ path('app_forgot_password_request') }}" id="mot">Mot de passe oubli√©</a></p>                
                    </div>
                </div>
            </div>
        </div>    
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}    
</form>
{% endblock %}
